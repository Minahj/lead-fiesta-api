# Production Environment Configuration for Coolify Deployment
# Copy these variables to your Coolify environment settings

# Django Settings
SECRET_KEY=your-production-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com,www.your-domain.com

# API Configuration
API_KEY=your-production-api-key

# Scraper Configuration
SCRAPER_TIMEOUT=30
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_RETRY_WAIT=2

# Proxy Configuration (Add your proxy credentials)
RESIDENTIAL_PROXY_URL=your-residential-proxy-url
DATACENTER_PROXY_URL=your-datacenter-proxy-url

# CORS Configuration (Add your frontend domains)
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Security Settings
SECURE_SSL_REDIRECT=True
